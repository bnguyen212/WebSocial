<h2>SEND NEW DIRECT MESSAGE TO {{user.screen_name}}</h2>

{{#if error}}
<div class="alert alert-danger">{{error}}</div>
{{/if}}

<form class="well form-horizontal twitter-message-form" action="/twitter/messages/send/{{user.id_str}}" method="post">
  <div class="form-group">
    <textarea type="text" class="form-control" name="content" rows="3" placeholder="please type in your message">{{form.content}}</textarea>
  </div>

  <input type="submit" class="btn btn-primary" value="Send">
</form>

<div>
  <a href="/contacts"><button class="btn btn-warning">View All Twitter Followers</button></a>
</div>