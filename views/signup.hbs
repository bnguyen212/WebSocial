<h2>REGISTER</h2>

<form class="well form-horizontal" id="signup-form" action="/signup" method="post">
  {{#if error}}
  <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <div class="form-group">
  <label class="control-label">Username: </label>
  <input type="text" class="form-control" name="username" placeholder="username" value="{{form.username}}">
  </div>

  <div class="form-group">
  <label class="control-label">Phone Number: </label>
  <input type="text" class="form-control" name="phone" placeholder="########## (10 digits)" value="{{form.phone}}">
  </div>

  <div class="form-group">
  <label class="control-label">Password: </label>
  <input type="password" class="form-control" name="password" placeholder="password" value="{{form.password}}">
  </div>

  <div class="form-group">
  <label class="control-label">Repeat Password: </label>
  <input type="password" class="form-control" name="repeatPassword" placeholder="password" value="{{form.repeatPassword}}">
  </div>

  <input type="submit" class="btn btn-danger" value="Register">
</form>


<div>
  <a href="/login"><button class="btn btn-primary">Login</button></a>
</div>